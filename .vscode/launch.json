{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve (Vivaldi)",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/",
      "runtimeExecutable": "/path/to/vivaldi",  // CHANGE THIS
      "runtimeArgs": [
        "--incognito",
        "--remote-debugging-port=9222"
      ]
    },
    {
      "name": "ng test (Vivaldi)",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html",
      "runtimeExecutable": "/path/to/vivaldi",  // CHANGE THIS
      "runtimeArgs": [
        "--incognito",
        "--remote-debugging-port=9222"
      ]
    }
  ]
}